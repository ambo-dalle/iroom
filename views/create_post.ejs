<%- include partials/header.ejs %>

<div class="container">


  <div class="navigation">
    <ul>
      <li>
        <form action="/" method="GET" class="form-group">
          <input type="submit" value="Beranda">
        </form>
      </li>
      <li id="logo">i ROOMS</li>
      <li>
        <form action="/posts" method="POST" class="form-group">
          <input type="submit" value="Daftar Postingan">
        </form>
      </li>
    </ul>
  </div>

  <div class="form-group">
    <div class="products">
      <div class="form-style-6">
      <p class="text_update">Buat Post Baru</p>
      <form method="post" action="/posts/create" class="form-group">
      <input type="text" name="title" placeholder="judul" />
      <textarea name="description" placeholder="Masukkan rooms anda" maxlength="500"></textarea>
      <select name="room_id">
        <% dataRoom.forEach(room => {%>
        <option value="<%- room.id%>" data-icon="<%- room.imagePath%>"><%- room.room_name%></option>
        <%})%>
      </select>
      <input type="submit"name="sumbit" value="Create" />
      </form>
      </div>
    </div>
  </div>

  <h3>i ROOOMS</h3>


</div>

</body>
</html>
